package effets;

/**
 * @author Lallement
 *
 */
public class Capacite implements Effet {
	
	/* ---------- Attributs ---------- */
	/**
	 * Libelle de la capacité
	 */
	private String libelleCap;
	
	/* ---------- Constructeurs ---------- */
	/**
	 * Constructeur avec argument
	 * @param {String} libelle : libelle de la capacité nouvellement créée
	 */
	public Capacite(String libelle) {
		this.libelleCap = libelle;
	}
	
	/* ---------- Getters & Setters ---------- */	
	/**
	 * @return the libelleCap
	 */
	public String getLibelleCap() {
		return libelleCap;
	}

	/**
	 * @param libelleCap the libelleCap to set
	 */
	public void setLibelleCap(String libelleCap) {
		this.libelleCap = libelleCap;
	}

	/* ---------- Méthodes ---------- */
	/** 
	 * Implémentation de la méthode appliquerEffet de l'interface Effet
	 * @see effets.Effet#appliquerEffet()
	 */
	@Override
	public void appliquerEffet() {
		System.out.println(this.libelleCap);
	}

	/**
	 * Méthode de tests
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}

}
