package effets;

/**
 * @author Lallement
 *
 */
public class Capacite implements Effet {
	
	/* ---------- Attributs ---------- */
	/**
	 * Libelle de la capacité
	 */
	private String libelleCap;
	
	/* ---------- Constructeurs ---------- */
	/**
	 * Constructeur avec argument
	 * @param {String} libelle : libelle de la capacité nouvellement créée
	 */
	public Capacite(String libelle) {
		this.libelleCap = libelle;
	}
	
	/* ---------- Getters & Setters ---------- */	
	/**
	 * Accesseur pour l'attribut libelleCap
	 * @return {String} libelleCap : retourne la valeur de l'attribut libelleCap
	 */
	public String getLibelleCap() {
		return libelleCap;
	}

	/**
	 * Modificateur pour l'attribut libelleCap
	 * @param {String} libelle : nouveau libelle à attribuer à libvelleCap
	 */
	public void setLibelleCap(String libelle) {
		this.libelleCap = libell;
	}

	/* ---------- Méthodes ---------- */
	/** 
	 * Implémentation de la méthode appliquerEffet de l'interface Effet
	 * @see effets.Effet#appliquerEffet()
	 */
	@Override
	public void appliquerEffet() {
		System.out.println(this.libelleCap);
	}

	/**
	 * Méthode de tests
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}

}
