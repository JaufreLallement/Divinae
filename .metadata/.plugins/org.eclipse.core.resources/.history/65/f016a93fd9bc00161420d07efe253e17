public abstract class Carte {
	
	/* ---------- Attributs ---------- */
	private Origine origineCarte;
	

	/* ---------- Constructeurs ---------- */
	
	/**
	 * Constructeur par défaut
	 */
	public Carte() {
		this.origineCarte = null;
	}
	
