/**
 * 
 */
package dogme;

/**
 * @author Lallement
 * La classe dogme décrit les dogmes adoptés par certaines cartes.
 */
public class Dogme {
	/* ---------- Attributs ---------- */
	/**
	 * Libellé du dogme. Parmis les possibilités de l'énumération LibelleDogme
	 */
	private LibelleDogme libD;
	
	/* ---------- Constructeurs ---------- */
	/**
	 * 	Constructeur par défaut
	 */
	private Dogme() {
		this.libD = null;
	}
	
	/**
	 * Constructeur avec arguments
	 * Tout Dogme nouvellement créé doit posséder un libellé
	 * @param {LibelleDogme} libD : libellé à attribuer au dogme
	 */
	public Dogme(LibelleDogme libD) {
		this.libD = libD;
	}
	
	/* ---------- Getters & Setters ---------- */
	/**
	 * Accesseur permettant d'obtenir le libellé d'un dogme
	 * @return {LibelleDogme} libD : retourne le libellé du dogme
	 */
	public LibelleDogme getLibD() {
		return this.libD;
	}
	
	/**
	 * Modificateur permettant d'éditer le libellé d'un dogme
	 * @param {LibelleDogme} libD : libellé à attribuer au dogme
	 */
	public void setLibD(LibelleDogme libD) {
		this.libD = libD;
	}
	
	/* ---------- Méthodes ---------- */
	/**
	 * Méthode de tests
	 * @param {String[]} args
	 */
	public static void main(String[] args) {

	}
}
