package cartes.cartes_action.cartes_action_effet.cartes_action_dogmatiques.guides_spirituels;

import java.util.ArrayList;

import origine.Origine;
import dogme.Dogme;
import effets.Effet;

/**
 * @author Lallement
 * La classe CarteMartyr decrit le comportement des cartess Martyr
 */
public class CarteMartyr extends CarteGuideSpirituel implements Effet {

/* ---------- Attributs ---------- */
	
	/* ---------- Constructeurs ---------- */
	/**
	 * Constructeur par défaut
	 */
	public CarteMartyr() {
		// TODO Auto-generated constructor stub
	}

	/**
	 * Constructeur avec arguments
	 * @param {Dogme[]} dogmes : dogmes a attribuer a la carte
	 */
	public CarteMartyr(Origine origine, Dogme[] dogmes) {
		super(origine, dogmes, 2);
	}
	

	/* ---------- Getters & Setters ---------- */
	
	/* ---------- Méthodes ---------- */
	/**
	 * Implémentation de la méthode appliquerEffet
	 * @see effet.Effet#appliquerEffet()
	 */
	@Override
	public void appliquerEffet() {
		// TODO Appliquer l'effet correspondant à la carte
	}
	
	/**
	 * Methode retournant toutes les cartes ermites
	 * @return {ArrayList<CarteMartyr>} divinites : retourne un ArrayList contenant tous les ermites
	 */
	public static ArrayList<CarteMartyr> getAllErmites() {
		ArrayList<CarteMartyr> martyrs = new ArrayList<CarteMartyr>();
		martyrs.add(new CarteMartyr(Origine.JOUR, new Dogme[] {Dogme.NATURE, Dogme.HUMAIN}));
		martyrs.add(new CarteMartyr(new Dogme[] {Dogme.HUMAIN, Dogme.SYMBOLES}));
		return martyrs;
	}

	/**
	 * Methode de tests
	 * @param args
	 */
	
	
	
